{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "g++ 编译活动文件",
			"type": "process",
			"command": "C:\\mingw64\\bin\\g++.exe",
			"args": [
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}.exe",
				"-Wall",
				"-Wextra"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": ["$gcc"],
			"detail": "使用 g++ 编译当前 C++ 文件"
		},
		{
			"label": "gcc 编译活动文件",
			"type": "process",
			"command": "C:\\mingw64\\bin\\gcc.exe",
			"args": [
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}.exe",
				"-Wall",
				"-Wextra"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": ["$gcc"],
			"detail": "使用 gcc 编译当前 C 文件"
		}
	]
}
